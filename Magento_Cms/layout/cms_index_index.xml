<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <container name="body.banner" before="main.content" htmlTag="div" htmlClass="content__container">
                <block class="Magento\Cms\Block\Block" name="content.banner">
                    <arguments>
                        <argument name="block_id" xsi:type="string">content-banner</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>


