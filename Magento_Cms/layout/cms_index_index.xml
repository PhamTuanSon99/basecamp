<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <referenceContainer name="main.content" remove="true" />
            <container name="img.banner" htmlTag="div" htmlClass="head__img container1">
                <block class="Magento\Framework\View\Element\Template" name="head.img.banner" template="Magento_Cms::content_banner.phtml">
                </block>
            </container>
            <container name="content.banner" htmlTag="div" htmlClass="logo__img container1">
                <block class="Magento\Cms\Block\Block" name="logo.content">
                    <arguments>
                        <argument name="block_id" xsi:type="string">logo-banner</argument>
                    </arguments>
                </block>
                <block class="Magento\Cms\Block\Block" name="profit.content">
                    <arguments>
                        <argument name="block_id" xsi:type="string">profit-banner</argument>
                    </arguments>
                </block>
                <block class="Magento\Cms\Block\Block" name="offer.content">
                    <arguments>
                        <argument name="block_id" xsi:type="string">offer-banner</argument>
                    </arguments>
                </block>
                <block class="Magento\Cms\Block\Block" name="service.content">
                    <arguments>
                        <argument name="block_id" xsi:type="string">service-banner</argument>
                    </arguments>
                </block>
                <block class="Magento\Cms\Block\Block" name="advertisement.content">
                    <arguments>
                        <argument name="block_id" xsi:type="string">advertisement-banner</argument>
                    </arguments>
                </block>
            </container>
            <container name="content.product.news" htmlTag="div" htmlClass="product__content container2">
                <block class="Magento\Framework\View\Element\Template" template="Magento_Cms::product.phtml" name="product.content"/>
            </container>
        </referenceContainer>
    </body>
</page>