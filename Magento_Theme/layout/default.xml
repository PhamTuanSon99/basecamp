<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/basecamp_logo.png</argument>
                <argument name="logo_width" xsi:type="number">226</argument>
                <argument name="logo_height" xsi:type="number">127</argument>
                <argument name="logo_alt" xsi:type="string">Base Camp logo</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="header.links">
            <referenceBlock name="authorization-link-login" remove="true"/>
            <referenceBlock name="register-link" remove="true"/>
            <referenceBlock name="header" remove="true"/>
            <block class="Magento\Framework\View\Element\Html\Link" name="my-account-custom" before="-">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">My Account</argument>
                    <argument name="path" xsi:type="string">customer/account</argument>
                    <argument name="class" xsi:type="string">my-account-link</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link" name="my-wishlist-custom">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">My Wishlist</argument>
                    <argument name="path" xsi:type="string">wishlist</argument>
                    <argument name="class" xsi:type="string">my-wishlist-link</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link" name="contact-us">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Contact us</argument>
                    <argument name="path" xsi:type="string">contact</argument>
                    <argument name="class" xsi:type="string">contact-us</argument>
                </arguments>
            </block>
            <block name="call-us" class="Magento\Cms\Block\Block">
                <arguments>
                    <argument name="block_id" xsi:type="string">call-us</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="top.links">
            <referenceBlock name="my-account-link" remove="true"/>
            <referenceBlock name="wish-list-link" remove="true"/>
        </referenceBlock>
        <block name="promotion" class="Magento\Cms\Block\Block">
            <arguments>
                <argument name="block_id" xsi:type="string">promotion</argument>
            </arguments>
        </block>
        <move element="promotion" destination="top.container"/>
        <referenceContainer name="footer">
            <referenceBlock name="footer_links" remove="true"/>
            <referenceBlock name="form.subscribe" remove="true"/>
            <block name="footer.custom" template="Magento_Theme::footer-custom.phtml" />
        </referenceContainer>
        <move element="copyright" destination="footer" after="footer.custom"/>
    </body>
</page>