<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/basecamp_logo.png</argument>
                <argument name="logo_width" xsi:type="number">226</argument>
                <argument name="logo_height" xsi:type="number">127</argument>
                <argument name="logo_alt" xsi:type="string">Base Camp logo</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="register-link-login" remove="true" />
        <referenceBlock name="authorization-link" remove="true" />
        <block name="promotion" class="Magento\Cms\Block\Block">
            <arguments>
                <argument name="block_id" xsi:type="string">promotion</argument>
            </arguments>
        </block>
        <move element="promotion" destination="top.container"/>
        <referenceContainer name="footer">
            <referenceBlock name="footer_links" remove="true"/>
            <referenceBlock name="form.subscribe" remove="true"/>
            <block name="footer.custom" template="Magento_Theme::footer-custom.phtml" />
        </referenceContainer>
        <move element="copyright" destination="footer" after="footer.custom"/>
    </body>
</page>